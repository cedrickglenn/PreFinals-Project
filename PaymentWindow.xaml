<Window x:Class="Final_Project.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final_Project"
        mc:Ignorable="d"
        Title="PaymentWindow" Height="200" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label
            Content="&#xA;&#x9;Pay Amount: " Margin="10,10,10.2,9.8"
            />
        <TextBox
            Name="txtPayAmount"
            Grid.Column="1" Margin="9.8,10,9.6,37.8"/>
        <Button
            Name="btnPay"
            Content="Pay"
            Grid.Row="1" 
            Grid.ColumnSpan="2"
            Margin="70,27.2,70,27.2" Click="BtnPay_Click"/>

    </Grid>
</Window>
